{
  "name": "stellar-sdk",
  "version": "10.4.1",
  "description": "stellar-sdk is a library for working with the Stellar Horizon server.",
  "keywords": [
    "stellar"
  ],
  "homepage": "https://github.com/stellar/js-stellar-sdk",
  "bugs": {
    "url": "https://github.com/stellar/js-stellar-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stellar/js-stellar-sdk.git"
  },
  "license": "Apache-2.0",
  "author": "Stellar Development Foundation <hello@stellar.org>",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/types",
    "/lib",
    "/dist"
  ],
  "scripts": {
    "build": "yarn build:node",
    "build:all": "yarn build:node && yarn build:browser",
    "build:all:prod": "yarn build:prod && yarn build:browser:prod",
    "build:browser": "webpack -c ./webpack.config.browser.js",
    "build:browser:prod": "cross-env NODE_ENV=production yarn build:browser",
    "build:node": "babel --extensions '.ts' --out-dir lib/ src/",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "clean": "rm -rf lib/ dist/ coverage/ .nyc_output/",
    "docs": "jsdoc -c ./.jsdoc.json --verbose",
    "pretty": "prettier --config ./prettier.config.js --ignore-path ./.prettierignore --write './**/*.js'",
    "test": "yarn build && yarn test:node",
    "test:all": "yarn test && yarn test:browser && yarn tslint",
    "test:browser": "karma start ./karma.conf.js",
    "test:node": "nyc --nycrc-path ./.nycrc mocha --recursive",
    "tslint": "dtslint --localTs node_modules/typescript/lib types/",
    "preversion": "yarn clean && yarn pretty && yarn build:all:prod && yarn test:all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "lib/*.{js,json}": [
      "prettier --write"
    ],
    "lib/*.js": [
      "eslint --fix --max-warnings 0",
      "git add"
    ],
    "**/*.ts": [
      "prettier --write",
      "tslint --fix"
    ]
  },
  "prettier": "@stellar/prettier-config",
  "mocha": {
    "exclude": "test/test-browser.js",
    "reporter": "spec",
    "require": [
      "@babel/register",
      "./test/test-nodejs.js"
    ],
    "timeout": 60000
  },
  "nyc": {
    "instrument": false,
    "reporter": "text-summary",
    "sourceMap": false
  },
  "dependencies": {
    "@types/eventsource": "^1.1.2",
    "@types/node": "^18.15.11",
    "@types/randombytes": "^2.0.0",
    "@types/urijs": "^1.19.6",
    "axios": "0.25.0",
    "bignumber.js": "^4.0.0",
    "detect-node": "^2.0.4",
    "es6-promise": "^4.2.4",
    "eventsource": "^1.1.1",
    "lodash": "^4.17.21",
    "randombytes": "^2.1.0",
    "tslib": "^1.10.0",
    "stellar-base": "^8.2.1",
    "toml": "^3.0.0",
    "typescript": "^5.0.3",
    "urijs": "^1.19.1",
    "utility-types": "^3.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.12.0",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@babel/register": "^7.21.0",
    "@definitelytyped/dtslint": "^0.0.159",
    "@istanbuljs/nyc-config-babel": "3.0.0",
    "@stellar/tsconfig": "^1.0.2",
    "@typescript-eslint/parser": "^5.57.1",
    "axios-mock-adapter": "^1.21.4",
    "babel-loader": "^9.1.2",
    "babel-plugin-istanbul": "^6.1.1",
    "buffer": "^6.0.3",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-import": "^0.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^4.0.0",
    "ghooks": "^2.0.4",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.2.0",
    "karma-firefox-launcher": "^2.1.1",
    "karma-mocha": "^2.0.0",
    "karma-sinon-chai": "^2.0.2",
    "karma-webpack": "^5.0.0",
    "lint-staged": "^13.2.0",
    "minami": "^1.1.1",
    "mocha": "^10.2.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.7",
    "randombytes": "^2.1.0",
    "sinon": "^15.0.3",
    "sinon-chai": "^3.7.0",
    "taffydb": "^2.7.3",
    "terser-webpack-plugin": "^5.3.7",
    "ts-node": "^10.9.1",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  }
}
